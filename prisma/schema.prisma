// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  resetToken   Token?  @relation(fields: [resetTokenId], references: [id])
  resetTokenId String?
}

model Token {
  id          String   @id @default(cuid())
  token       String
  tokenExpiry DateTime
  userId      String
  User        User[]
}
